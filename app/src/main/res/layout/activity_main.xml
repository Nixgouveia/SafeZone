<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- ScrollView para permitir rolagem -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Conteúdo dentro do ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp"> <!-- Deixar espaço para a barra de navegação -->

            <!-- Título dos avisos -->
            <TextView
                android:id="@+id/titleWarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avisos"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp" />

            <!-- RecyclerView para avisos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/warningsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="16dp" />

            <!-- Título do mapa -->
            <TextView
                android:id="@+id/mapTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp" />

            <!-- Mapa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>


            <!-- Guias de Ação -->
            <TextView
                android:id="@+id/actionGuidesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guias de Ação"
                android:textColor="#FFFFFF"
                android:textSize="38sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp" />

            <!-- Acordeão Guia de Incêndio -->
            <LinearLayout
                android:id="@+id/accordion_fire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:clickable="true"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_fire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guia de Incêndio"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/indicator_fire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="Indicator"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_fire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chame Emergência: Ligue para o número 112 e informe a localização."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Acordeão Guia de Evacuação -->
            <LinearLayout
                android:id="@+id/accordion_evacuation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_evacuation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guia de Evacuação"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/indicator_evacuation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="Indicator"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_evacuation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Siga as rotas de evacuação designadas e evite áreas perigosas."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Acordeão Guia de Inundação -->
            <LinearLayout
                android:id="@+id/accordion_flood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_flood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:padding="16dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guia de Inundação"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/indicator_flood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="Indicator"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_flood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Evite áreas baixas e mova-se para terrenos mais altos."
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!-- Barra de navegação inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:padding="10dp"
        android:weightSum="3">

        <!-- Botão Home com Label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Home"
                android:tint="#FFFFFF"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botão Notificações com Label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/button_notifications"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_notifications"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Notifications"
                android:tint="#FFFFFF"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botão Configurações com Label -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_settings"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Settings"
                android:tint="#FFFFFF"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

